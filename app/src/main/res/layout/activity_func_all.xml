<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="9dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="10sp"
            android:textColor="@color/h_txt_color"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="11dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/h_top_s_height"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="11dp"
            android:background="@drawable/h_search"
            android:layout_marginRight="@dimen/h_top_city_left"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/h_top_right"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@color/h_txt_color"
            android:textSize="10sp"
            android:layout_margin="9dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/h_gray_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="推荐应用"
            android:textColor="#363636"
            android:layout_margin="9dp"

            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/h_gray_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="课堂.培训"
            android:textColor="#363636"
            android:layout_margin="9dp"

            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/h_gray_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="学习工具"
            android:textColor="#363636"
            android:layout_margin="9dp"

            />

    </RelativeLayout>

</LinearLayout>